<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ParkingLotDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">


            <ImageView
                android:id="@+id/imgCarParkImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/car_park_image"
                android:src="@mipmap/parking_lot_image" />

            <TextView
                android:id="@+id/parkingLotNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/imgCarParkImage"
                android:fontFamily="@font/helvetica_neue_medium"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/showUpdateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parkingLotNameTextView"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgCarParkImage"
                android:fontFamily="@font/helvetica_neue_medium"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/updateDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showUpdateTime"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgCarParkImage"
                android:fontFamily="@font/lucida_grande_regular"
                android:gravity="center"
                android:textSize="20sp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/imgCarParkImage"
                android:layout_marginTop="15dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tvallspaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/divider1"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:paddingStart="10dp"
                android:text="Total Spaces"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/allspaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvallspaces"
                android:fontFamily="@font/lucida_grande_regular"
                android:paddingStart="35dp"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvusedspaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:text="Occupied"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/usedspaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvusedspaces"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lucida_grande_regular"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvavailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/divider1"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:paddingEnd="25dp"
                android:text="Vacant"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvavailable"
                android:fontFamily="@font/lucida_grande_regular"
                android:paddingEnd="25dp"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>